{
  "name": "Auto Searcher",
  "version": "0.0.2",
  "description": "Automatically search Bing 30 times in a row. There is no specific reason why one would want to do this.",

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png",
    "512": "icons/icon512.png"
  },

  "background": {
    "scripts": ["background/background.js"]
  },
  "permissions": [
    "activeTab",
    "https://*.bing.com/*"
  ],

  "manifest_version": 2
}
